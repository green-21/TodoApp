<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="2"
    android:columnCount="4"
    android:background="@drawable/shape_radius_view"
    android:id="@+id/itemLayout">

    <CheckBox
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:layout_gravity="center"
        android:id="@+id/itemCheck"
        android:gravity="center_vertical"
        />
    <TextView
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:textSize="19dp"
        android:layout_gravity="fill_vertical"
        android:id="@+id/itemName"
        android:layout_marginTop="7dp"

        android:textColor="#555"
        />
    <LinearLayout
        android:id="@+id/itemDetail"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingTop="3dp"
        android:paddingLeft="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemToday"
            android:text="@string/item_today"
            android:textColor="#44e"
            android:visibility="gone"
            android:layout_marginRight="3dp"
            android:textSize="11dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:id="@+id/itemImportance"
            android:text="@string/item_importance"
            android:textColor="#e44"
            android:visibility="gone"
            android:layout_marginRight="4dp"
            android:textSize="11dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:id="@+id/itemDate"
            android:textColor="@color/black"
            android:textSize="11dp"
            android:textStyle="bold"
            />
    </LinearLayout>


</GridLayout>
